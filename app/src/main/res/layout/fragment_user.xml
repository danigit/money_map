<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_image_128"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002"
            android:contentDescription="@string/profile_photo_label" />

        <Button
            android:id="@+id/take_profile_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/take_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <TextView
            android:id="@+id/profile_user_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="100dp"
            android:text="@string/profile_user_name"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/take_profile_image_button" />

        <TextView
            android:id="@+id/profile_user_surname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/profile_user_surname"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_user_name_label" />

        <TextView
            android:id="@+id/profile_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/profile_phone_number"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_user_surname_label" />

        <TextView
            android:id="@+id/profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_user_name_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/profile_surname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_user_surname_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/profile_phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_phone_number"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/modify_user_data_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/update_user_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_phone_number"
            android:contentDescription="@string/user_profile_image" />

        <ImageView
            android:id="@+id/save_user_data_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/user_profile_image"
            android:src="@drawable/save_user_data_icon"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_phone_number" />

        <EditText
            android:id="@+id/user_name_input_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:autofillHints="@string/insert_name_hint"
            android:ems="10"
            android:hint="@string/insert_name_hint"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_user_name_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/user_surname_input_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:autofillHints="@string/insert_surname_hint"
            android:ems="10"
            android:hint="@string/insert_surname_hint"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_user_surname_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/user_phone_input_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:autofillHints="@string/insert_phone_hint"
            android:ems="10"
            android:hint="@string/insert_phone_hint"
            android:inputType="phone"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@+id/profile_phone_number"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>